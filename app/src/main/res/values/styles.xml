<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Aboutpage_headers">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/about_text_margin</item>
        <item name="android:textSize">@dimen/mainpage_head_textsize</item>
        <item name="android:layout_marginTop">@dimen/about_head_margintop</item>
    </style>

    <style name="Aboutpage_text">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_marginLeft">@dimen/about_text_margin</item>
        <item name="android:layout_marginTop">@dimen/about_text_margintop</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>
