<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Aboutpage_headers">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/about_text_margin</item>
        <item name="android:textSize">@dimen/mainpage_head_textsize</item>
        <item name="android:layout_marginTop">@dimen/about_head_margintop</item>
    </style>

    <style name="Aboutpage_text">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_marginLeft">@dimen/about_text_margin</item>
        <item name="android:layout_marginTop">@dimen/about_text_margintop</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ToolbarStyle">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:padding">@dimen/toolbar_padding_TopBottom</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="ToolBarIconStyle">
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">36dp</item>
        <item name="android:layout_marginLeft">@dimen/fragment_toolbar_icon_margin</item>
        <item name="android:paddingBottom">@dimen/fragment_toolbar_paddingbottom</item>
        <item name="android:paddingTop">@dimen/fragment_toolbar_paddingbottom</item>
        <item name="android:src">@mipmap/ic_launcher_round</item>
    </style>

    <style name="ToolBarTextStyle">
        <item name="android:textColor">#ffffff</item>
        <item name="android:layout_marginTop">@dimen/fragment_toolbar_margin</item>
        <item name="android:layout_marginLeft">@dimen/fragment_toolbar_icon_margin</item>
        <item name="android:paddingTop">@dimen/news_horizontal_margin</item>
        <item name="android:paddingBottom">@dimen/fragment_toolbar_marginbottom</item>
        <item name="android:textSize">@dimen/toolbar_text_size</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="SwitcherStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/settings_switch_textSize</item>
        <item name="android:layout_marginLeft">@dimen/settings_switch_marginLR</item>
        <item name="android:layout_marginRight">@dimen/settings_switch_marginLR</item>
        <item name="android:layout_marginTop">@dimen/settings_switch_marginTop</item>
    </style>
</resources>
